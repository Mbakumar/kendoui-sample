<div id="catSelectList">
    @(Html.Kendo().Grid<RnD.KendoUISample.Models.Category>().Name("catSelectListGrid").Columns(columns =>
                                                                                                                           {
                                                                                                                               columns.Bound(c => c.CategoryId).Width("150px");
                                                                                                                               columns.Bound(c => c.Name).Width("150px");
                                                                                                                               columns.Bound(c => c.CategoryId).ClientTemplate("<input id='CategoryId_#=CategoryId#' class='chkCategoryId' type='checkbox' name='CategoryId' value='#=CategoryId#' />").HeaderTemplate("Select").Width("50px");
                                                                                                                           }).Editable(editable => editable.Mode(GridEditMode.InCell)).Groupable(group => group.Enabled(false)).Pageable(pager => pager.Input(true).Numeric(true).Info(true).PreviousNext(true).Refresh(true).PageSizes(true)).Sortable().Scrollable().Resizable(resize => resize.Columns(true)).Filterable(filter => filter.Enabled(true)).DataSource(dataSource => dataSource.Ajax().ServerOperation(false).Model(model =>
                                                                                                                           {
                                                                                                                               model.Id(e => e.CategoryId);
                                                                                                                               model.Field(e => e.CategoryId).Editable(false);
                                                                                                                           }).Read(read => read.Action("CategorysRead", "Category"))))
</div>
